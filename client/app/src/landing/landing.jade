#landing
  .topnav(
    scroll-position="scrollPosition"
    ng-class="{'white': scrollPosition > 80}"
  )
    .container
      .row
        .col-md-12
            .link(
              du-smooth-scroll="home"
            ) HOME
            .link(
              du-smooth-scroll="about"
            ) ABOUT
            .link(
              du-smooth-scroll="features"
            ) FEATURES
            //- .link(
            //-   du-smooth-scroll="pricing"
            //- ) PRICING
            //- .link(
